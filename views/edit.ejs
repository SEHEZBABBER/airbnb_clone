<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Listing | WanderLust</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('header') %>
    
    <div class="container">
        <div class="form-container">
            <h1>Edit Your Listing</h1>
            <p>Update the details of your property below</p>
            
            <form action="/listings/<%= obj.id %>?_method=PATCH" method="post" class="listing-form needs-validation" novalidate>
                <!-- Hidden fields to ensure _id and owner are sent -->
                <input type="hidden" name="_id" value="<%= obj.id %>">
                <input type="hidden" name="owner" value="<%= obj.owner %>">

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" class="form-control" name="title" value="<%= obj.title %>" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Nah Nah Not Good</div>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" class="form-control" name="description" rows="5" required><%= obj.description %></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Nah Nah Not Good!</div>
                </div>

                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="text" id="image" class="form-control" name="image" value="<%= obj.image %>" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Nah Nah Not Good!</div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="price">Price (per night)</label>
                        <input type="number" id="price" class="form-control" name="price" value="<%= obj.price %>" min="1" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Nah Nah Not Good!</div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" id="location" class="form-control" name="location" value="<%= obj.location %>" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Nah Nah Not Good! </div>
                    </div>

                    <div class="form-group">
                        <label for="country">Country</label>
                        <input type="text" id="country" class="form-control" name="country" value="<%= obj.country %>" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Nah Nah Not Good!</div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Update Listing</button>
            </form>
        </div>
    </div>
    
    <%- include('footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/validate.js"></script>
</body>
</html>
