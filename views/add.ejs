<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Listing | WanderLust</title>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Include your CSS file here -->
</head>
<body>
    <%- include('header') %>
    
    <div class="container">
        <div class="form-container">
            <h1>Add Your Listing</h1>
            <p>Add the details of your property below</p>
            
            <form action="/listings" method="post"class="listing-form needs-validation" novalidate enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" class="form-control" name="title" placeholder="Enter Title Here" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Nah Nah Not Good!</div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" class="form-control" name="description" rows="5" placeholder="Enter Description Here" required></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Nah Nah Not Good!</div>
                </div>
                
                <div class="form-group">
                    <label for="image">Upload Image</label>
                    <input type="file" id="image" class="form-control" name="image">
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                
                <div class="form-group">
                    <label for="price">Price (per night)</label>
                    <input type="number" id="price" class="form-control" name="price" placeholder="Enter Price Here" min="1" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Nah Nah Not Good! Price must be greater than 0.</div>
                </div>
                
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" id="location" class="form-control" name="location"  placeholder="Enter The Location Here" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Nah Nah Not Good!</div>
                    </div>
                    
                    <div class="form-group">
                        <label for="country">Country</label>
                        <input type="text" id="country" class="form-control" name="country" placeholder="Enter Country Name Here" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Nah Nah Not Good!</div>
                    </div>
                </div>
                
                <button type="submit" class="btn-submit">Update Listing</button>
            </form>
        </div>
    </div>
    <%- include('footer') %>
    <!-- Add Bootstrap JS (for validation) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/validate.js"></script>
</body>
</html>